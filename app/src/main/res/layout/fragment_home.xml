<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:fitsSystemWindows="true"
        app:elevation="0dp"
        app:liftOnScroll="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView4"
                    style="@style/haystack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginMedium"
                    android:text="@string/haystack"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/shapeableImageView"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginEnd="@dimen/marginMedium"
                    android:layout_marginTop="@dimen/marginMedium"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearance="@style/CircleImageView"
                    app:srcCompat="@drawable/surya" />

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/searchView"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:background="@drawable/search_background"
                    android:drawableStart="@drawable/search"
                    android:drawablePadding="@dimen/padding12dp"
                    android:fontFamily="@font/lato"
                    android:hint="@string/search_for_an_event"
                    android:paddingStart="@dimen/padding12dp"
                    android:paddingEnd="@dimen/padding12dp"
                    android:singleLine="true"
                    android:textFontWeight="400"
                    android:clickable="true"
                    android:focusable="true"
                    android:inputType="none"
                    android:editable="false"
                    app:layout_constraintEnd_toEndOf="@+id/shapeableImageView"
                    app:layout_constraintStart_toStartOf="@+id/textView4"
                    app:layout_constraintTop_toBottomOf="@+id/shapeableImageView"
                    tools:targetApi="p" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteY="148dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/marginMedium"
                android:scaleType="fitXY"
                android:src="@drawable/location"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/current_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginMedium"
                android:gravity="top"
                android:lineSpacingExtra="0sp"
                android:text="@string/thursday_06"
                android:textAppearance="@style/date"
                android:layout_marginStart="@dimen/marginMedium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView12" />

            <TextView
                android:id="@+id/banglore_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:lineSpacingExtra="2sp"
                android:text="@string/banglore_in"
                android:textAppearance="@style/location"
                android:translationY="-1.2sp"
                app:layout_constraintStart_toStartOf="@+id/current_date"
                app:layout_constraintTop_toBottomOf="@+id/current_date" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginMedium"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView12">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/padding_16dp"
                    android:paddingEnd="@dimen/padding_16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMyEvents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_bold"
                        android:text="MyEvents"
                        android:textAllCaps="false" />

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_8dp"
                        android:fontFamily="@font/lato_bold"
                        android:text="Interest"
                        android:textAllCaps="false" />

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_8dp"
                        android:fontFamily="@font/lato_bold"
                        android:text="Attend"
                        android:textAllCaps="false" />

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_8dp"
                        android:fontFamily="@font/lato_bold"
                        android:text="Invite"
                        android:textAllCaps="false" />

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/pupular_eve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginMedium"
                android:gravity="top"
                android:lineSpacingExtra="0sp"
                android:text="@string/pupular_eve"
                android:textAppearance="@style/pupular_eve"
                app:layout_constraintStart_toStartOf="@+id/banglore_in"
                app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/marginMedium"
                android:scaleType="fitXY"
                android:src="@drawable/menu_img"
                app:layout_constraintTop_toBottomOf="@+id/pupular_eve"
                tools:layout_editor_absoluteX="24dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/marginMedium"
                android:scaleType="fitXY"
                android:src="@drawable/menu_img1_"
                app:layout_constraintTop_toBottomOf="@+id/imageView13"
                app:shapeAppearance="@style/RectangleImageView"
                tools:layout_editor_absoluteX="24dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/marginMedium"
                android:layout_marginBottom="@dimen/marginMedium"
                android:scaleType="fitXY"
                android:src="@drawable/menu_img2_"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView14"
                app:shapeAppearance="@style/RectangleImageView" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>