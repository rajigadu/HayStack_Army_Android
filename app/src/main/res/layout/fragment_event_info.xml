<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintContactInfo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarEventInfo"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Event Info"
        app:titleCentered="true"
        app:menu="@menu/event_info_menu"
        app:navigationIconTint="@color/black"
        app:navigationIcon="@drawable/arrow_left"
        app:titleTextAppearance="@style/ToolbarTitle" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarEventInfo">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_24dp">

            <ImageView
                android:id="@+id/eventImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:elevation="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/menu_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textEventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_24dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/lato"
                android:hint="@string/event_name"
                android:textSize="@dimen/font_16sp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/eventImage"
                app:layout_constraintStart_toStartOf="@+id/eventImage"
                app:layout_constraintTop_toBottomOf="@+id/eventImage" />

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:alpha="0.5"
                android:background="@color/colorBottomLine"
                app:layout_constraintEnd_toEndOf="@+id/textEventName"
                app:layout_constraintStart_toStartOf="@+id/textEventName"
                app:layout_constraintTop_toBottomOf="@+id/textEventName" />

            <TextView
                android:id="@+id/textHostName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginMedium"
                android:background="@android:color/transparent"
                android:fontFamily="@font/lato"
                android:hint="@string/host_name"
                android:textColor="@color/black"
                android:singleLine="true"
                android:textSize="@dimen/font_16sp"
                app:layout_constraintTop_toBottomOf="@+id/view"/>

            <View
                android:id="@+id/view1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:alpha="0.5"
                android:background="@color/colorBottomLine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textHostName" />

            <TextView
                android:id="@+id/textContactInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginMedium"
                android:background="@android:color/transparent"
                android:fontFamily="@font/lato"
                android:hint="@string/contact_info"
                android:textColor="@color/black"
                android:singleLine="true"
                android:textSize="@dimen/font_16sp"
                app:layout_constraintTop_toBottomOf="@+id/view1"/>

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:alpha="0.5"
                android:background="@color/colorBottomLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textContactInfo"/>

            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:alpha="0.5"
                android:background="@color/colorBottomLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textCountry"/>

            <View
                android:id="@+id/view4"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:alpha="0.5"
                android:background="@color/colorBottomLine"
                app:layout_constraintTop_toBottomOf="@+id/textState"
                app:layout_constraintStart_toStartOf="parent"/>

            <View
                android:id="@+id/view5"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:alpha="0.5"
                android:background="@color/colorBottomLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textCity"/>

            <TextView
                android:id="@+id/textState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginMedium"
                android:background="@android:color/transparent"
                android:fontFamily="@font/lato"
                android:hint="@string/state"
                android:singleLine="true"
                android:textSize="@dimen/font_16sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/view3"/>

            <TextView
                android:id="@+id/textCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginMedium"
                android:background="@android:color/transparent"
                android:fontFamily="@font/lato"
                android:hint="@string/country"
                android:singleLine="true"
                android:textSize="@dimen/font_16sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/view2"/>

            <TextView
                android:id="@+id/textCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginMedium"
                android:background="@android:color/transparent"
                android:fontFamily="@font/lato"
                android:hint="@string/city"
                android:singleLine="true"
                android:textSize="@dimen/font_16sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/view4"/>

            <TextView
                android:id="@+id/textZipCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginMedium"
                android:background="@android:color/transparent"
                android:fontFamily="@font/lato"
                android:hint="@string/zip_code"
                android:singleLine="true"
                android:textSize="@dimen/font_16sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/view5"/>

            <TextView
                android:id="@+id/textStreetAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginMedium"
                android:background="@android:color/transparent"
                android:fontFamily="@font/lato"
                android:hint="@string/street_address"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16sp"
                app:layout_constraintTop_toBottomOf="@id/view7"/>

            <View
                android:id="@+id/view7"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:alpha="0.5"
                android:background="@color/colorBottomLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textZipCode"/>

            <View
                android:id="@+id/view16"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:alpha="0.5"
                android:background="@color/colorBottomLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textStreetAddress"/>

            <TextView
                android:id="@+id/labelStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/start"
                style="@style/start"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:textColor="@color/colorLabelText"
                app:layout_constraintTop_toBottomOf="@id/view16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/view8"
                android:layout_marginTop="@dimen/marginMedium"/>

            <View
                android:id="@+id/view8"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:alpha="0.5"
                android:layout_marginEnd="@dimen/margin_8dp"
                android:background="@color/colorBottomLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/view9"
                app:layout_constraintTop_toBottomOf="@+id/textStartDate"/>

            <TextView
                android:id="@+id/labelEnd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginMedium"
                android:text="@string/end"
                style="@style/start"
                android:textColor="@color/colorLabelText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@+id/view9"
                app:layout_constraintTop_toBottomOf="@id/view16" />

            <View
                android:id="@+id/view9"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:alpha="0.5"
                android:layout_marginStart="@dimen/margin_8dp"
                android:background="@color/colorBottomLine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/view8"
                app:layout_constraintTop_toBottomOf="@+id/textEndDate"
                tools:layout_editor_absoluteX="24dp" />

            <TextView
                android:id="@+id/textStartDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_14sp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:fontFamily="@font/lato"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/view8"
                app:layout_constraintStart_toStartOf="@+id/view8"
                app:layout_constraintTop_toBottomOf="@+id/labelStart"/>

            <TextView
                android:id="@+id/textEndDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_14sp"
                android:fontFamily="@font/lato"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/view9"
                app:layout_constraintStart_toStartOf="@+id/view9"
                app:layout_constraintTop_toTopOf="@+id/textStartDate" />

            <TextView
                android:id="@+id/labelStartTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/start_time"
                style="@style/start"
                app:layout_constraintStart_toStartOf="@id/view8"
                app:layout_constraintEnd_toEndOf="@id/view8"
                android:layout_marginTop="@dimen/margin_8dp"
                app:layout_constraintTop_toBottomOf="@+id/view8"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:textColor="@color/colorLabelText"/>

            <TextView
                android:id="@+id/labelEndTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/end_time"
                style="@style/start"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:textColor="@color/colorLabelText"
                app:layout_constraintTop_toTopOf="@id/labelStartTime"
                app:layout_constraintStart_toStartOf="@+id/view9"
                app:layout_constraintEnd_toEndOf="@id/view9"/>

            <TextView
                android:id="@+id/textStartTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:textSize="@dimen/font_14sp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/margin_5dp"
                app:layout_constraintTop_toBottomOf="@+id/labelStartTime"
                app:layout_constraintEnd_toEndOf="@+id/view8"
                app:layout_constraintStart_toStartOf="@id/view8"/>

            <TextView
                android:id="@+id/textEndTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:textSize="@dimen/font_14sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/textStartTime"
                app:layout_constraintStart_toStartOf="@+id/view9"
                app:layout_constraintEnd_toEndOf="@+id/view9"/>

            <View
                android:id="@+id/view10"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:alpha="0.5"
                android:background="@color/colorBottomLine"
                app:layout_constraintStart_toStartOf="@+id/view8"
                app:layout_constraintTop_toBottomOf="@+id/textStartTime"
                app:layout_constraintEnd_toEndOf="@+id/view8"/>

            <View
                android:id="@+id/view11"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="@color/colorBottomLine"
                app:layout_constraintTop_toTopOf="@+id/view10"
                app:layout_constraintStart_toStartOf="@+id/view9"
                app:layout_constraintEnd_toEndOf="@+id/view9"/>

            <TextView
                android:id="@+id/event_descr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_descr"
                android:textAppearance="@style/event_descr"
                android:lineSpacingExtra="2sp"
                android:translationY="-1.2sp"
                android:gravity="top"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/marginMedium"
                app:layout_constraintTop_toBottomOf="@+id/view10"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/editTextEventDescr"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                android:layout_marginTop="@dimen/margin_8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/event_descr">

                <EditText
                    android:id="@+id/textEventDesciption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:gravity="start"
                    android:enabled="false"
                    android:hint="@string/description"
                    android:minLines="5"
                    android:maxLength="1000"
                    android:textColor="@color/black"
                    android:inputType="text|textCapWords"
                    android:textSize="@dimen/font_16sp"
                    android:fontFamily="@font/lato"
                    tools:ignore="Deprecated" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNotInterested"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/not_interested"
                android:fontFamily="@font/lato_bold"
                android:textAllCaps="false"
                android:padding="@dimen/padding_12dp"
                android:layout_marginTop="@dimen/marginMedium"
                android:layout_marginBottom="@dimen/marginMedium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextEventDescr"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnInterested"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/interested"
                android:fontFamily="@font/lato_bold"
                android:textAllCaps="false"
                android:padding="@dimen/padding_12dp"
                android:layout_marginBottom="@dimen/marginMedium"
                app:layout_constraintTop_toBottomOf="@+id/btnNotInterested"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAttend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/attend"
                android:fontFamily="@font/lato_bold"
                android:textAllCaps="false"
                android:padding="@dimen/padding_12dp"
                android:layout_marginBottom="@dimen/marginMedium"
                app:layout_constraintTop_toBottomOf="@+id/btnInterested"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>