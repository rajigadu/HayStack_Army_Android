<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/bottomSheet"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingStart="@dimen/padding_24dp"
    android:paddingEnd="@dimen/padding_24dp"
    android:paddingBottom="@dimen/padding_24dp">

    <AutoCompleteTextView
        android:id="@+id/mapRadius"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:background="@drawable/retangle_background"
        android:drawableEnd="@drawable/map_radius"
        android:fontFamily="@font/lato"
        android:hint="@string/radius"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:paddingStart="@dimen/padding12dp"
        android:paddingEnd="@dimen/padding_8dp"
        android:textSize="@dimen/font_16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkNationWide" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkNationWide"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:text="@string/nationwide"
        android:textColor="@color/black"
        android:textSize="@dimen/font_14sp"
        android:paddingStart="@dimen/paddingMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnManualSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:padding="@dimen/padding12dp"
        android:text="@string/manual_search"
        android:layout_marginTop="@dimen/marginMedium"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/mapRadius"
        tools:layout_editor_absoluteX="24dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:textAllCaps="false"
        android:padding="@dimen/padding12dp"
        android:text="@string/_continue"
        app:layout_constraintTop_toBottomOf="@+id/btnManualSearch"
        tools:layout_editor_absoluteX="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>