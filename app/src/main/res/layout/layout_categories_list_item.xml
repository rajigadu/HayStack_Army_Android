<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/padding_24dp"
    android:paddingEnd="@dimen/padding_24dp">

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/categoriesItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:lineSpacingExtra="2sp"
        android:text="@string/art_crafts"
        android:textSize="@dimen/font_14sp"
        android:drawablePadding="@dimen/paddingMedium"
        android:fontFamily="@font/lato"
        android:textAppearance="@style/categories"
        android:translationY="-1.2sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/categoriesItem"
        android:background="@color/colorBottomLine"/>

</androidx.constraintlayout.widget.ConstraintLayout>